{
  "name": "legacy-homepage-api",
  "version": "1.0.0",
  "description": "レガシーホームページ API (Cloudflare Workers + D1)",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create legacy-homepage-db",
    "db:init": "wrangler d1 execute legacy-homepage-db --file=./schema.sql",
    "db:init:local": "wrangler d1 execute legacy-homepage-db --local --file=./schema.sql"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}

